  "description": "Sample configuration for homebridge-modelighting-v2",
  "platforms": [
    {
      "_comment": "RECOMMENDED: Platform plugin with auto-discovery - automatically finds all channels and scenes",
      "platform": "ModelightingV2Platform",
      "name": "Mode Lighting",
      "NPU_IP": "192.168.0.1"
    },
    {
      "_comment": "Platform with filters - only expose specific channels and scenes",
      "platform": "ModelightingV2Platform",
      "name": "Mode Lighting Filtered",
      "NPU_IP": "192.168.0.2",
      "discoverChannels": true,
      "discoverScenes": true,
      "channelFilter": [9, 10, 15, 16],
      "sceneFilter": [24, 25, 38, 42],
      "requestTimeout": 5000,
      "maxRetries": 10,
      "retryDelay": 500
    }
  ],
  "accessories": [
    {
      "_comment": "OPTIONAL: Manual accessory configuration - use if you prefer manual control",
