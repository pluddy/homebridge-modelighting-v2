      "name": "Living Room Ceiling",
      "channel": "001",
      "dimmable": true,
      "defaultBrightness": 100
    },
    {
      "accessory": "ModelightingV2",
      "NPU_IP": "192.168.0.1",
      "name": "Kitchen Table",
      "channel": "002",
      "dimmable": true,
      "defaultBrightness": 80
    },
    {
      "accessory": "ModelightingV2",
      "NPU_IP": "192.168.0.1",
      "name": "Bedroom Lamp",
      "channel": "003",
      "dimmable": false
    },
    {
      "accessory": "ModelightingV2",
      "NPU_IP": "192.168.0.2",
      "name": "Garage Light",
      "channel": "001",
      "dimmable": true,
      "defaultBrightness": 100,
      "requestTimeout": 10000,
      "maxRetries": 15,
      "retryDelay": 1000
    },
    {
      "_comment": "Scene mode examples - activate pre-configured scenes (not dimmable)",
      "accessory": "ModelightingV2",
      "NPU_IP": "192.168.0.1",
      "name": "Evening Scene",
